# Sentry-AI Configuration Example
# Copy this file to .env and customize as needed

# Application Settings
DEBUG=False
LOG_LEVEL=INFO
LOG_FILE=sentry_ai.log
LOG_RETENTION_DAYS=30

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=phi3:mini
OLLAMA_TEMPERATURE=0.1

# Observer Settings
OBSERVER_INTERVAL=2.0
OBSERVER_ENABLED=True

# Database Settings
DATABASE_URL=sqlite:///./sentry_ai.db

# API Settings
API_HOST=127.0.0.1
API_PORT=8000

# Security Settings (comma-separated lists)
BLACKLIST_APPS=Terminal,iTerm,Keychain Access,System Preferences,System Settings,Activity Monitor,Disk Utility
# WHITELIST_APPS=  # If set, only these apps will be automated
REQUIRE_CONFIRMATION_FOR=Finder,Mail
